<h1>Sign-In</h1>

<% if flash[:error] %>
  <p style="color:red;"><%= flash[:error] %></p>
<% end %>

<h2>Sign In</h2>
<%= form_with url: session_path, local: true do |form| %>
  <%= form.label :email %>
  <%= form.text_field :email, name: 'user[email]' %>

  <%= form.label :password %>
  <%= form.password_field :password, name: 'user[password]' %>

  <%= form.hidden_field :action_type, value: 'sign_in' %>
  <%= form.submit 'Sign In' %>
<% end %>

<hr>

<h2>Sign Up</h2>
<%= form_with model: @user, url: session_path, local: true do |form| %>
  <%= form.label :username %>
  <%= form.text_field :username, name: 'user[username]' %>

  <%= form.label :email %>
  <%= form.text_field :email, name: 'user[email]' %>

  <%= form.label :password %>
  <%= form.password_field :password, name: 'user[password]' %>

  <%= form.hidden_field :action_type, value: 'sign_up' %>
  <%= form.submit 'Sign Up' %>
<% end %>